<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrueOrFalseApp.MainPage">

    <StackLayout BackgroundColor="GhostWhite" Spacing="10">
        <Frame BackgroundColor="DodgerBlue" Padding="24" CornerRadius="0">
            <Label x:Name="quizName" TextColor="GhostWhite" HorizontalTextAlignment="Center" FontSize="36"/>
        </Frame>


        
        <Image x:Name="imageSpot" Source="" HeightRequest="150" IsVisible="false"></Image>
             <Grid RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>


            <Label 
                    Grid.Row="0" 
                    Grid.ColumnSpan="2" 
                    x:Name="endResults"  
                    IsVisible="false"
                    Style="{StaticResource LabelStyle}"
                    Text="" 
                />
            <Label 
                    Grid.Row="0" 
                    Grid.ColumnSpan="2" 
                    x:Name="questionArea"  
                    IsVisible="false"
                    Style="{StaticResource LabelStyle}"
                    Text="{Binding Question}" 
                />
            <Button 
                    Grid.Row="0" 
                    Grid.ColumnSpan="2" 
                    x:Name="startButton"
                    Clicked="StartQuiz" 
                    IsVisible="true" 
                    Style="{StaticResource ButtonStyle}"
                    Text="Start Quiz"
                />
            <Button 
                    Grid.Row="1" 
                    Grid.Column="0" 
                    x:Name="falseButton"
                    Clicked="ResponsePressed" 
                    IsVisible="false" 
                    Style="{StaticResource ButtonStyle}"
                    Text="{Binding Choices[1].Option}"
                />
            <Button 
                    Grid.Row="1" 
                    Grid.Column="1" 
                    x:Name="trueButton"  
                    Clicked="ResponsePressed" 
                    IsVisible="false" 
                    Style="{StaticResource ButtonStyle}"
                    Text="{Binding Choices[0].Option}"
                />

        </Grid>
    </StackLayout>

</ContentPage>